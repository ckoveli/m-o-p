<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.title %> | Mesec Od Papira</title>
    <script type="text/javascript" src="js/fontawesome.js"></script>
    <link rel="shortcut icon" type="image/png" href="favicon/favicon.png">
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }
        html, body{
            overflow-x: hidden;
        }
        body{
            position: relative;
            font-family: Arial;
            background: #fafafa;
        }
        p{
            font-size: 15px;
            color: #505050;
        }
		a{
            cursor: pointer;
            text-decoration: none;
			font-size: inherit;
            color: inherit;
        }
        a:hover{
            color: #161616;
            transition: 0.25s;
        }
        .logo{
            display: block;
            min-height: 10px;
            text-align: center;
            letter-spacing: 5px;
            font-family: Chalkduster, fantasy;
            font-size: 20px;
            background: rgb(22, 22, 22);
            color: white;
            animation: navLoad 0.5s ease-in;
        }
        .logo img{
            cursor: pointer;
            margin-top: 5px;
            width: 100px;
            height: 100px;
            animation: navLoad 1s ease-in;
        }
        .logo h4{
            cursor: pointer;
        }
        nav{
            display: flex;
            position: relative;
            height: 50px;
            justify-content: space-around;
            align-items: center;
            font-family: Optima, sans-serif;
            border-bottom: 1px solid #dcdcdc;
		    background: #ffffff;
            animation: navLoad 0.5s ease-in;
        }
        .sticky{
            position: fixed;
            z-index: 10;
            top: 0;
            width: 100%;
        }
        .search{
            position: absolute;
            top: 12px;
            left: 70px;
        }
        .input{
            cursor: pointer;
            position: absolute;
            width: 25px;
            height: 25px;
            padding-left: 25px;
            font-size: 15px;
            letter-spacing: 1px;
            border: 1px solid #161616;
            border-radius: 50%;
            outline: none;
            background: #fafafa;
            transition: 0.5s;
        }
        .inputClicked{
            cursor: text;
            width: 20vw;
            padding-left: 5px;
            border-radius: 0;
            transition-delay: 0.25s;
            transition: 0.5s;
        }
        .searchBtn{
            position: absolute;
            cursor: pointer;
            top: 0;
            right: 0;
            width: 20px;
            height: 10px;
            border: none;
            outline: none;
            background: none;
        }
        .searchBtn::before{
            position: absolute;
            top: 24px;
            right: -29px;
            width: 8px;
            height: 2px;
            content: "";
            background: #161616;
            transform: rotate(45deg);
            transition: 0.5s;
        }
        .close::before, .close::after{
            position: absolute;
            top: 12px;
            left: 20vw;
            width: 15px;
            height: 2px;
            content: "";
            background: #161616;
            transition: 0.5s;
        }
        .close::before{
            transform: rotate(-45deg);
        }
        .close::after{
            transform: rotate(45deg);
        }
        .links{
            display: flex;
            width: 500px;
            text-transform: uppercase;
            justify-content: space-around;
        }
        .links li{
            cursor: default;
            list-style-type: none;
            letter-spacing: 2px;
            line-height: 48px;
            font-size: 13px;
            font-weight: bold;
            color: #161616;
        }
        .links a{
            display: block;
            text-decoration: none;
            letter-spacing: 3px;
            line-height: 48px;
            font-size: 13px;
            font-weight: bold;
            border-bottom: 1px solid transparent;
            color: #161616;
        }
        .links a:hover{
            border-bottom: 1px solid #161616;
        }
        .mobile{
            display: none;
            position: relative;
            left: 26%;
            cursor: pointer;
        }
        .mobile div{
            margin: 5px;
            width: 25px;
            height: 2px;
            background: #161616;
            transition: all 0.5s ease;
        }
        .input::placeholder{
            opacity: 0;
        }
        .input:focus::placeholder{
            opacity: 1;
        }
        .wrapper{
            min-height: 500px;
            content: "";
            clear: both;
        }
        .card{
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            padding: 20px;
            width: 800px;
            line-height: 20px;
            border: 1px solid #dcdcdc;
            border-radius: 10px;
            background: #ffffff;
            color: #161616;
			box-shadow: 0 5px 10px rgba(0,0,0,0.20), 0 1px 3px rgba(0,0,0,0.20);
            animation: articleLoad 0.5s ease-in 0.5s;
            animation-fill-mode: forwards;
            opacity: 0;
            transition: 0.5s;
        }
        .avatar{
		    position: absolute;
            top: 0;
            left: 0;
		    width: 100%;
            max-height: 500px;
		    overflow-y: scroll;
		    overflow-x: hidden;
		    text-align: center;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		    transition: 0.5s;
		}
        .picture{
            width: inherit;
			border-top-right-radius: 10px;
			border-top-left-radius: 10px;
		    background-repeat: no-repeat;
		    transition: 0.5s;
		}
        .title{
            padding: 20px;
            padding-left: 40px;
            line-height: 35px;
            color: #161616;
            font-family: Optima, sans-serif;
            font-size: 28px;
        }
        .subtitle{
            padding-left: 40px;
            color: #161616;
		    font-size: 18px;
		}
        .date{
            padding-left: 40px;
            color: #505050;
            font-size: 14px;
            margin: 15px 0;
        }
        .body{
            padding: 40px;
            padding-top: 20px;
            font-size: 16px;
            color: #505050;
        }
        .card .comments-title{
            padding: 20px;
            text-align: center;
            font-size: 20px;
            color: #505050;
        }
        #comment{
            max-width: 500px;
            word-wrap: break-word;
        }
        .card textarea{
            resize: none;
            padding: 10px;
            width: 100%;
            height: 100px;
			overflow: auto;
		    font-size: 16px;
            border: 1px solid #dcdcdc;
            background: #fafafa;
			color: #505050;
            transition: 0.25s;
        }
        ::placeholder{
            font-size: 13px;
        }
        .card textarea:hover{
            background: #dcdcdc;
            color: #161616;
		    transition: 0.25s;
        }
        .card textarea:focus{
            background: #fafafa;
			border: 1px solid #007bf6;
			transition: 0.25s;
        }
        .type{
			position: relative;
            top: -22px;
			left: 175px;
			margin-bottom: 25px;
			transform: translateX(-50%);
			width: 100px;
			height: 25px;
			border: 1px solid #dcdcdc;
			background: #ffffff;
			overflow: hidden;
			transition: 0.25s;
		}
		.type:hover{
			background: #dcdcdc;
			transition: 0.25s;
		}
		.type::after{
			cursor: pointer;
			pointer-events: none;
			position: absolute;
			top: 0;
			right: 0;
			width: 15px;
			padding: 2px;
			content: '\25BC';
			font-size: 10px;
			color: #161616;
			transition: 0.25s all ease;
		}
        .card input{
            display: none;
            position: absolute;
            margin-top: -22px;
            left: 275px;
            width: 100px;
            height: 25px;
            text-align: center;
            font-size: 13px;
		    border: 1px solid #dcdcdc;
		    background: #fafafa;
		    transition: 0.25s;
        }
        .card input:hover{
            background: #dcdcdc;
			transition: 0.25s;
        }
        .card input:focus{
            background: #fafafa;
			border: 1px solid #007bf6;
			transition: 0.25s;
        }
        select{
			cursor: pointer;
			padding-left: 15px;
			width: inherit;
            height: inherit;
			-webkit-appearance: none;
			-moz-appearance: none;
			-ms-appearance: none;
			appearance: none;
			font-size: 13px;
			outline: 0;
			border: 0!important;
			box-shadow: none;
			background: none;
			background-image: none;
		}
		select::-ms-expand{
			display: none;
		}
        .card button{
            cursor: pointer;
		    position: relative;
            top: -22px;
		    width: 100px;
		    height: 30px;
            border: none;
            font-size: 14px;
		    background: #007bf6;
		    color: white;
		    transition: 0.25s;
        }
        table{
            position: relative;
            width: 100%;
            border-collapse: collapse;
            border-top: 1px solid #dcdcdc;
        }
        tbody{
            border-bottom: 1px solid #dcdcdc;
        }
        thead th{
            padding: 20px;
        }
        tbody td{
            padding: 20px;
        }
        .social-media{
            position: relative;
            text-align: center;
        }
        .social-media i{
            margin: 25px;
            padding: 10px;
            width: 40px;
            text-align: center;
            font-size: 20px;
            border: 1px solid #dcdcdc;
            border-radius: 10px;
            color: #505050;
            transition: 0.25s;
        }
        .social-media i:hover{
            border: 1px solid #161616;
            color: #161616;
            transition: 0.25s;
        }
        .footer{
            margin-top: 100px;
            padding: 20px;
            width: 100%;
            height: 50px;
            text-align: center;
            border-top: 1px solid #dcdcdc;
            background: #ffffff;
            color: #505050;
        }
        .footer-left{
			display: flex;
            position: absolute;
            left: 15%;
        }
        .footer-right{
			display: flex;
            position: absolute;
            right: 15%;
        }
        .footer i{
			width: 20px;
			height: 100%;
			font-size: 20px;
		}
        @keyframes navLoad{
            0%{
                transform: translateY(-200%);
            }
            100%{
                transform: translateY(0);
            }
        }
        @keyframes headerLoad{
            0%{
                transform: translateY(-20px);
                opacity: 0;
            }
            100%{
                transform: translateY(0);
                opacity: 1;
            }
        }
        @keyframes articleLoad{
            0%{
                margin-top: 125px;
                opacity: 0;
            }
            100%{
                margin-top: 150px;
                opacity: 1;
            }
        }
        @media screen and (max-width: 1024px){
            .search{
                left: 19%;
            }
            .inputClicked{
                width: 61vw;
                z-index: 10;
                transition-delay: 0.25s;
                transition: 0.5s;
            }
            .close::before, .close::after{
                left: 60vw;
                z-index: 10;
            }
            .links{
                display: flex;
                position: absolute;
                z-index: 10;
                flex-direction: column;
                top: 49px;
                right: 0px;
                left: 50%;
                height: 500px;
                border: 1px solid #dcdcdc;
                background: #ffffff;
                transform: translateX(100%);
                transition: transform 0.5s ease-in;
            }
            .links li{
                opacity: 0;
                margin-left: 60px;
            }
            .links a{
                line-height: 0;
            }
            .links a:hover{
                border: none;
            }
            .mobile{
                display: block;
            }
            .linksActive{
                transform: translateX(0%);
            }
            .card{
                width: 90%;
                transition: 0.5s;
            }
            .title{
                padding-left: 10px;
            }
            .subtitle{
                padding-left: 10px;
            }
            .date{
                padding-left: 10px;
            }
            .body{
                padding: 10px;
            }
            .avatar{
                overflow-y: hidden;
            }
            .picture{
                min-height: 500px;
            }
            thead th{
                padding-right: 0;
            }
            #commentDate{
                width: 75px;
                text-align: center;
                font-size: 11px;
            }
            #comment{
				max-width: 175px; 
			}
            .type{
                width: 100px;
                font-size: 14px;
            }
            #username{
                margin: 28px;
                margin-left: -130px;
                width: 155px;
                height: 30px;
            }
            .footer{
                font-size: 12px;
                height: 75px;
            }
    		.footer-left{
    		    left: 0;
				right: 0;
				margin-left: auto;
				margin-right: auto;
				width: 200px;
            }
            .footer i{
                font-size: 15px;
            }
    		.footer-right{
                position: relative;
				top: 25px;
 				left: 0; 
 				right: 0; 
 				margin-left: auto; 
 				margin-right: auto; 
 				width: 300px;
    		}
        }
        @keyframes navLinkFade{
            from{
                opacity: 0;
                transform: translateX(50px);
            }
            to{
                opacity: 1;
                transform: translateX(0px);
            }
        }
        .toggle .line1{
            transform: rotate(-45deg) translate(-5px,6px);
        }
        .toggle .line2{
            opacity: 0;
        }
        .toggle .line3{
            transform: rotate(45deg) translate(-5px,-6px);
        }
    </style>
</head>
<body>
    <div class="logo">
        <img src="logo/mop.png" onclick="window.location.href = '/'">
        <h4 onclick="window.location.href = '/'">Mesec Od Papira</h4>
    </div>
    <nav>
        <div class="search">
            <form class="searchBox" action="/pretraga" method="GET">
                <input class="input" type="text" placeholder="Pretraži..." name="q">
                <button class="searchBtn" type="button"></button>
            </form>
        </div><% if(token == true){ %> 
        <%- include('../admin/partials/_nav') %> 
        <% }else{ %> 
            <ul class="links">
                <li><a href="/">Početna</a></li>
                <li><a href="/poezija">Poezija</a></li>
                <li><a href="/o-meni">O meni</a></li>
            </ul>
<%}%><div class="mobile">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>
    <div class="wrapper">
        <div class="card">
            <div class="avatar">
                <img class="picture" src="<%= data.picture %>">
            </div><% if(!!data.picture){ %><h3 class="title" style="margin-top: 490px;"><%= data.title %></h3><% }else{ %> 
            <h3 class="title"><%= data.title %></h3><% } %>  
            <p class="subtitle"><%= data.subtitle %></p>
            <p class="date"><i class="far fa-calendar" style="margin-right: 5px;"></i><%= data.date %></p>
            <div class="body"><%- data.body %> </div>
            <div class="social-media">
                <a href="https://www.facebook.com/profile.php?id=100019338011818" target="blank"><i class="fa fa-facebook"></i></a>
                <a href="https://www.instagram.com/mesec_od_papiraa/" target="blank"><i class="fa fa-instagram"></i></a>
                <a href="https://rs.linkedin.com/in/kristina-kljajić-a798761b3" target="blank"><i class="fa fa-linkedin"></i></a>
            </div>
        </div>
        <% if(data.commentsEnabled == true){ %>
            <div class="card">
                <h4 class="comments-title">
                    <% if(data.comments.length>0){ %>
                        <% if(data.comments.length == 1){ %>
                            <%= data.comments.length %> Komentar 
                        <% }else{ %>
                            <%= data.comments.length %> Komentara
                        <% } %>   
                    <% }else{ %>
                        Nema komentara
                    <% } %>
                </h4>
                <% if(data.comments !== undefined || array.length>0){ %>
                    <table>
                        <% data.comments.forEach((comment)=>{ %> 
                            <thead>
                                <tr><th align="left">
                                    <% if(comment.username == ''){ %>
                                        Anoniman 
                                    <% }else{ %>
                                        <%= comment.username %>
                                    <% } %>   
                                    </th><td align="right"><p id="commentDate"><%= comment.date %></p></td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><p id="comment"><%= comment.comment %></p></td>
                                </tr>
                            </tbody>
                        <% }); %> 
                    </table>
                <% } %>  
                <form action="/komentar/<%= data.slug %>?_method=PUT" method="POST">
                    <textarea name="comment" placeholder="Dodaj komentar" maxlength="500"></textarea><br><br>
                    <p>Komentariši kao: </p><input id="username" type="text" name="username" placeholder="Ime" maxlength="10">
                    <div class="type">
                        <select onchange="revealInputUser(this.options[this.selectedIndex].value)" name="user">
                            <option value="anonymous">Anonimno</option>
                            <option value="name">Ime</option>
                        </select>
                    </div>
                    <button type="submit">Objavi</button>
                </form>
            </div>
        <% }else{ %>
            <div class="card">
                <h4 class="comments-title">Komentari su onemogućeni za ovu objavu.</h4>
            </div>
        <% } %>   
    </div>
    <div class="footer">
        <div class="footer-left">
            Copyright &copy;<script type="text/javascript">document.write(`&nbsp${new Date().getFullYear()}&nbsp`)</script><a href="/">Mesec Od Papira</a>
        </div>
        <div class="footer-right">
            Designed, developed and distributed by&nbsp;<a href="https://www.instagram.com/velickovicdj/" style="display: inherit;"><i class="fa fa-instagram"></i>velickovicdj</a>
        </div>
    </div>
    <script type="text/javascript">
        const searchBtn = document.querySelector('.searchBtn'),
        input = document.querySelector('.input'),
        mobile = document.querySelector('.mobile'),
        links = document.querySelector('.links'),
        navLinks = document.querySelectorAll('.links li');

        const title = document.querySelector('.title'),
        picture = document.querySelector('.picture').src;

        window.onscroll = function() {stickyNav()};

            const nav = document.querySelector('nav'),
            sticky = nav.offsetTop;
        
            function stickyNav() {
              if (window.pageYOffset >= sticky) {
              nav.classList.add('sticky')
          } else {
          nav.classList.remove('sticky');
          }
        }

        window.addEventListener('mouseup', (event)=>{
            if(event.target != input){
                input.blur();
                document.querySelector('.close').click();
            }
        });
        const navSlide = ()=>{
            mobile.addEventListener('click', ()=>{
                links.classList.toggle('linksActive');
                navLinks.forEach((link, index)=>{
                    if(link.style.animation){
                        link.style.animation = '';
                    }else{
                        link.style.animation = `navLinkFade 0.5s ease forwards ${index/5 + 0.5}s`;
                    }
                });
                mobile.classList.toggle('toggle');
            });
        }
        searchBtn.addEventListener('click', ()=>{
            input.classList.toggle('inputClicked');
            searchBtn.classList.toggle('close');
        });
        input.addEventListener('focus', ()=>{
            searchBtn.click()
        });
        function revealInputUser(value){
            if(value == 'name'){
                document.querySelector('.card input').style.display = 'block';
            }else{
                document.querySelector('.card input').value = '';
                document.querySelector('.card input').style.display = 'none';
            }
        }
        navSlide();
    </script>
</body>
</html>

