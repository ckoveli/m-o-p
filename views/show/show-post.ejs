    <script type="text/javascript">
        const searchBtn = document.querySelector('.searchBtn'),
        input = document.querySelector('.input'),
        mobile = document.querySelector('.mobile'),
        links = document.querySelector('.links'),
        navLinks = document.querySelectorAll('.links li');

        const title = document.querySelector('.title'),
        picture = document.querySelector('.picture').src;

        const comBox = document.querySelector('.comment-box');
        comBox.addEventListener('submit', async function(e){
            e.preventDefault();

            const formData = new FormData(this);
            const searchParams = new URLSearchParams();

            for(const pair of formData){
                searchParams.append(pair[0], pair[1])
            }

            if(document.querySelector('.comment-box-textarea').value !== ''){
                await fetch('/komentar/<%= data.slug %>', {
                    method: 'PUT',
                    body: searchParams
                }).then(res => res.json()).then((res)=>{
                    document.getElementById('comments-partial').innerHTML += res.partial;
                    document.querySelector('.comments-title').innerHTML = res.comCount;
                    document.querySelector('.comment-box-textarea').value = '';
                });
            }
        });

        async function submitReply(e, form, id, cnt){
            e.preventDefault();

            const formData = new FormData(form);
            const searchParams = new URLSearchParams();

            for(const pair of formData){
                searchParams.append(pair[0], pair[1]);
            }

            await fetch('/odgovor/<%= data.slug %>', {
                method: 'PUT',
                body: searchParams
            }).then(res => res.json()).then((res)=>{
                document.querySelector(`.replies-partial.id${id}`).innerHTML += res.partial;
                document.querySelector(`.replies-title.id${id}`).innerHTML = res.repCount;
                document.querySelector('.comments-title').innerHTML = res.comCount;
                document.querySelector('.reply-box-textarea').value = '';
                form.style.display = 'none';
                document.querySelector(`.reply-button.id${id}`).style.display = '';
                if(document.querySelector(`.replies-partial.id${id}`).style.display == 'none'){
                    document.querySelector(`.show-hide-replies.id${id}`).click();
                    document.getElementById(`reply_${id}_${res.lastReply}`).scrollIntoView();
                }else{
                    document.querySelector(`.show-hide-replies.id${id}`).click();
                    document.querySelector(`.show-hide-replies.id${id}`).click();
                    document.getElementById(`reply_${id}_${res.lastReply}`).scrollIntoView();
                }
            });
        }

        window.onscroll = function() {stickyNav()};

        const nav = document.querySelector('nav'),
        sticky = nav.offsetTop;
    
        function stickyNav() {
            if(window.pageYOffset >= sticky){
                nav.classList.add('sticky');
                if(document.cookie.indexOf('_sub')<0){
                    if(document.querySelector('.subscribe-box') !== null) document.querySelector('.subscribe-box').style.transform = 'translateX(0)';
                }
            }else{
                nav.classList.remove('sticky');
            }
        }
        window.addEventListener('mouseup', (event)=>{
            let replyBoxes = document.getElementsByClassName('reply-box');
 
            for(let i=0; i<replyBoxes.length; i++){
                if(event.target !== replyBoxes[i] && event.target !== replyBoxes[i].querySelector('.reply-box-textarea') 
                && event.target !== replyBoxes[i].querySelector('.rep-username') && event.target != replyBoxes[i].querySelector('select')){
                    replyBoxes[i].style.display = 'none';
                    if(document.querySelector(`.reply-button.id${i}`).style.display == 'none'){
                        document.querySelector(`.reply-button.id${i}`).style.display = 'block';
                        break;
                    }
                }
            }
            if(event.target == document.querySelector('.close')){
                input.value = '';
                input.focus();
                document.querySelector('.search-results').innerHTML = '';
                return;
            }
            if(event.target !== input && event.target !== document.querySelector('.close')){
                input.blur();
                if(!!document.querySelector('.close')){
                    document.querySelector('.close').click();
                    document.querySelector('.search-results').style.visibility = 'hidden';
                }		    
            }
        });
        const navSlide = ()=>{
            mobile.addEventListener('click', ()=>{
                links.classList.toggle('linksActive');
                navLinks.forEach((link, index)=>{
                    if(link.style.animation){
                        link.style.animation = '';
                    }else{
                        link.style.animation = `navLinkFade 0.5s ease forwards ${index/5 + 0.5}s`;
                    }
                });
                mobile.classList.toggle('toggle');
            });
        }
        searchBtn.addEventListener('click', ()=>{
            input.classList.toggle('inputClicked');
            searchBtn.classList.toggle('close');
        });
        input.addEventListener('focus', ()=>{
            searchBtn.click();
            document.querySelector('.search-results').style.visibility = 'visible';
        });
        async function searchResults(){
            const allSpace = arr => arr.every(val => val === ' ');
            if(allSpace(Array.from(input.value)) == false){
                const options = {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({q: input.value})
                }
                await fetch('/pretraga', options).then(res => res.json()).then((res)=>{
                    document.querySelector('.search-results').innerHTML = res.results;
                });
            }else{
                document.querySelector('.search-results').innerHTML = '';
            }
        }
        function revealCommentInputUser(value){
            if(value == 'name'){
                document.getElementById('com-username').style.display = 'block';
            }else{
                document.getElementById('com-username').value = '';
                document.getElementById('com-username').style.display = 'none';
            }
        }
        function inputFilled(input, label){
			if(input.value !== ''){
				label.style.top = '-20px';
			}else{
				label.style.top = '0';
			}
        }
        async function signUpNotifications(e, form){
            e.preventDefault();

            const formData = new FormData(form);
            const searchParams = new URLSearchParams();

			for(const pair of formData){
                searchParams.append(pair[0], pair[1]);
            }
            
            await fetch('/prijava-na-obavestenja', {
                method: 'PUT',
                body: searchParams
            }).then(res => res.json()).then((res)=>{
                if(res.error){
                    document.getElementById('error-email').style.display = 'block';
                    document.getElementById('error-email-label').innerText = res.error.msg;
                }else{
                    document.querySelector('.subscribe-box').innerHTML = res.html;
                    document.querySelector('.subscribe-box').style.width = '280px';
                    document.querySelector('.subscribe-box').style.height = '50px';
                    document.cookie = res.cookie;
                    setTimeout(()=>{
                        document.querySelector('.subscribe-box').style.transform = 'translateX(-200%)';
                    }, 2500)
                }
            });
        }
        function revealReplyInputUser(value, index){
            if(value == 'name'){
                document.getElementById(`rep-username_${index}`).style.display = 'block';
            }else{
                document.getElementById(`rep-username_${index}`).value = '';
                document.getElementById(`rep-username_${index}`).style.display = 'none';
            }
        }
        function revealCommentReply(pos){
            if(comBox.style.display = 'block'){
                comBox.style.display = 'none';
                document.getElementById('add-comment').style.display = 'block';
            }

            document.querySelector(`.reply-button.id${pos.id}`).style.display = 'none';
            document.querySelector(`.reply-box.id${pos.id}`).style.display = 'block';

            document.getElementById('add-comment').addEventListener('click', ()=>{
                document.querySelector(`.reply-box.id${pos.id}`).style.display = 'none';
                pos.style.display = 'block';

                document.getElementById('add-comment').style.display = 'none';
                comBox.style.display = 'block';
            });    
        }
        function showReplies(id, cnt){
            if(document.querySelector(`.replies-partial.id${id}`).style.display == 'none'){
                document.querySelector(`.replies-partial.id${id}`).style.display = '';
                if(cnt>1){
                    document.querySelector(`.show-hide-replies.id${id}`).innerHTML = `Sakrij ${cnt} odgovora <span class="show-hide-icon">\u25B2</span>`;
                }else{
                    document.querySelector(`.show-hide-replies.id${id}`).innerHTML = 'Sakrij odgovor <span class="show-hide-icon">\u25B2</span>'
                }
            }else{
                document.querySelector(`.replies-partial.id${id}`).style.display = 'none';
                if(cnt>1){
                    document.querySelector(`.show-hide-replies.id${id}`).innerHTML = `Prikaži ${cnt} odgovora <span class="show-hide-icon">\u25BC</span>`;
                }else{
                    document.querySelector(`.show-hide-replies.id${id}`).innerHTML = 'Prikaži odgovor <span class="show-hide-icon">\u25BC</span>'
                }
            }
        }
        navSlide();
    </script>
</body>
